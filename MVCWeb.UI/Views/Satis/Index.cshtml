@model MVCWeb.UI.Models.VM.UrunSatis.SatisVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Satış Kontrol</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        button[type=submit] {
            background-color: greenyellow;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Ürün Satışı</h1>
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Ürün Bilgileri</h2>
                @using (Html.BeginForm("Index", "Satis"))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(a => a.ProductList.ProductName, "Ürün Adı:")
                        @Html.DropDownListFor(a => a.ProductList.ProductName, new SelectList(Model.Products, "Value", "Text"), "-- Ürün Seçiniz --", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.ProductList.UnitsInStock, "Stok Miktarı:")
                        @Html.DisplayFor(a => a.ProductList.UnitsInStock)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.ProductList.UnitPrice, "Birim Fiyat:")
                        @Html.DisplayFor(a => a.ProductList.UnitPrice)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.OrderDetailInfo.Quantity, "Adet:")
                        @Html.TextBoxFor(a => a.OrderDetailInfo.Quantity, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.OrderInfo.ShipVia, "Kargo Şirketi:")
                        @Html.DropDownListFor(a => a.OrderInfo.ShipVia, Model.Shippers, "-- Kargo Şirketi Seçiniz --", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.OrderInfo.Freight, "Nakliye Ücreti:")
                        @Html.TextBoxFor(a => a.OrderInfo.Freight, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.OrderDetailInfo.Discount, "İndirim (%):")
                        @Html.TextBoxFor(a => a.OrderDetailInfo.Discount, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.OrderInfo.ShippedDate, "Kargo Çıkış Tarihi:")
                        @Html.TextBoxFor(a => a.OrderInfo.ShippedDate, new { @class = "form-control", type = "date" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.OrderInfo.RequiredDate, "Kargo Teslim Tarihi:")
                        @Html.TextBoxFor(a => a.OrderInfo.RequiredDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                }
            </div>
            <div class="col-md-6">
                <h2 class="text-center">Müşteri Bilgileri</h2>
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(a => a.OrderInfo.CustomerID, "Müşteri:")
                        @Html.DropDownListFor(a => a.OrderInfo.CustomerID, Model.Customers, "-- Müşteri Seçiniz --", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(a => a.OrderInfo.TotalPrice, "Toplam Fiyat")
                    @Html.DisplayFor(a => a.OrderInfo.TotalPrice)
                </div>
                <hr />
                <div class="text-center">
                    <button type="submit" class="btn btn-pink">Satış Yap</button>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
