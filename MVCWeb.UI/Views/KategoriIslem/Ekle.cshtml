
@{
    Layout = null;
}
@model MVCWeb.UI.Models.VM.KategoriVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ekle</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description"> Yeni Kategori Ekleme  </p>
	            <form class="forms-sample" method="post">
		            @Html.AntiForgeryToken()
		            <div class="form-group">
			            <label>Kategori Adı</label>
			            @Html.TextBoxFor(x => x.KategoriAdi, new { @class = "form-control" })
		            </div>
		            <div class="form-group">
			            <label>Açıklaması</label>
			            @Html.TextBoxFor(x => x.KategoriAciklama, new { @class = "form-control" })
		            </div>
		            <hr/>
		            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
		            <button class="btn btn-dark">İptal</button>
	            </form>
            </div>
        </div>
    </div>
</body>
</html>
