@{
    Layout = null;

}
@using MVCWeb.UI.Models.VM
@model List<KategoriVM>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="col-12 grid-margin stretch-card ">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Kategori Ekleme </p>
                <form class="forms-sample" method="post">
                    <div class="d-flex">
                        <div class="form-group mr-2">
                            <label>Kategori Adı</label>
                            <input type="text" id="ad" name="KategoriAdi" />
                        </div>
                        <div class="form-group mr-2">
                            <label>Açıklaması</label>
                            <input type="text" id="aciklama" name="KategoriAciklama" />
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        <button class="btn btn-dark">İptal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <hr />
    <a href="/KategoriIslem/Ekle/" class="btn btn-outline-info">Kategori Ekle</a>
    <hr />
    <table class="table table-responsive table-active">
        <h2 class="text-center text-dark">Kategoriler</h2>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Kategori Açıklama</th>
	        <th> </th>
            <th> </th>
        </tr>

        @foreach (KategoriVM item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(a => item.ID)

                </td>
                <td>
                    @Html.DisplayFor(a => item.KategoriAdi)
                </td>
                <td>
                    @Html.DisplayFor(a => item.KategoriAciklama)
                </td>
	            <td>
		            @*localhost :7878/KategoriIslemleri/Duzenle/5*@
		            @Html.ActionLink("Düzenle", "Duzenle", new { id = item.ID }, new { @class = "btn btn-danger" })
	            </td>
	            <td>
                    <a href="/KategoriIslem/KategoriSil/@item.ID" class="btn btn-outline-danger">Sil</a>
	            </td>
            </tr>
        }
    </table>

</body>
</html>