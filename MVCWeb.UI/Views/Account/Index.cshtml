
@{
    Layout = null;
}
@model MVCWeb.UI.Models.VM.AccountVM.MyUserVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
   
    <style>
	    button[type=submit] {
		    background-color: purple;
		    color: white;
		    border: none;
		    padding: 10px 20px;
		    text-align: center;
		    text-decoration: none;
		    display: inline-block;
		    font-size: 16px;
		    margin: 4px 2px;
		    cursor: pointer;
	    }
	    h4 {
		    text-align: center;
		    color: purple;
	    }
    </style>

</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center mb-4">Giriş Sayfası</h4>
                        @using (Html.BeginForm("Index", "Account", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.Label("Kullanıcı Adı:")
                                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Kullanıcı Soyadı:")
                                @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", placeholder = "Kullanıcı Soyadı" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Kullanıcı Şifre:")
                                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Kullanıcı Şifre" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Yaş:")
                                @Html.TextBoxFor(a => a.Age, new { @class = "form-control", placeholder = "Yaş" })
                            </div>
                            <div class="form-group form-check">
                                @Html.CheckBoxFor(a => a.RememberMe, new { @class = "form-check-input" })
                                <label class="form-check-label">Beni Hatırla</label>
                            </div>
                            <div class="form-group form-check">
                                @Html.CheckBoxFor(a => a.ForgetMe, new { @class = "form-check-input" })
                                <label class="form-check-label">Beni Unut</label>
                            </div>
	                        <div class="form-group text-right">
		                        <button type="submit" class="btn btn-purple">Giriş Yap</button>
	                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
